<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nas.android.expensio">

    <application
        android:name=".GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainNavigationActivity"
            android:label="@string/todays_expenses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetBudget"
            android:label="@string/setBudget" />
        <activity
            android:name=".AddCategory"
            android:label="@string/add_category" />
        <activity
            android:name=".DebtsAndLoansList"
            android:label="@string/debts_and_loans" />
        <activity
            android:name=".ViewSpendTrends"
            android:label="@string/view_spend_trends" />
        <activity android:name=".AddDebtOrLoan" />
        <activity android:name=".CategoryList" />
        <activity android:name=".BudgetList" />
        <activity android:name=".AddExpense"></activity>
    </application>

</manifest>